<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.bubbles.myrestaurants.ui.MainActivity"
    android:background="#000000">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="407dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/f5"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/myRestaurantsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Restaurants"
        android:textColor="@color/colorPrimaryText"
        android:textSize="55sp"
        android:layout_marginTop="13dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/locationEditText"
        android:layout_width="250sp"
        android:layout_height="27sp"
        android:background="@color/colorIcons"
        android:ems="10"
        android:hint="Enter Zip Code"
        android:inputType="text"
        android:textColor="@color/colorPrimary"
        android:visibility="visible"
        android:layout_above="@+id/findRestaurantsButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/findRestaurantsButton"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryText"
        android:text="Find Restaurants"
        android:textColor="@color/colorIcons"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="434dp"
        android:layout_marginBottom="102dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="10sp"/>





</RelativeLayout>
